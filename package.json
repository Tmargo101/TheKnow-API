  "engines": {
    "node": "20.x",
    "npm": "10.x"
  },
  "description": "API Server for The Know",
  "main": "./dist/app.js",
  "scripts": {
    "pretest": "eslint ./src --fix",
    "test": "echo \"Tests complete\"",
    "start2": "npm run build && node ./dist/app.js",
